<%- layout("/layouts/boilerplate") %>

<h1 class="col-8  offset-3">SignUp on Wanderlust</h1>
<div class="row mb-3">
    <div class="col-8  offset-3" >
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="from-label">Username:</label><br>
                
                <input name="username" id="username" type="text" class="form-control" required />
            
            <div class="valid-feedback"> Looks  goods!</div>
            </div>

        
                <div class="mb-3">
                <label for="email" class="from-label">email:</label><br>
                
                <input name="email" id="email" type="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="password" class="from-label">password:</label><br>
                
                <input name="password" id="password" type="password" class="form-control" required />
            </div>
            
            <button class="btn btn-success">SignUp</button>
        
    </div>
</div>